modules = ["nodejs-20", "python-3.11", "web", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["arrow-cpp", "cargo", "chromium", "freetype", "gitFull", "lcms2", "libiconv", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "pkg-config", "playwright-driver", "rustc", "tcl", "tk", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "dev"

[[workflows.workflow]]
name = "dev"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash -c 'export ROOT_DIR=$(pwd) && cd services/api && PYTHONPATH=\"${ROOT_DIR}:${PYTHONPATH}\" uvicorn app.main:app --host 0.0.0.0 --port 8000 & cd apps/frontend && npm run dev'"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 39495
externalPort = 3001

[[ports]]
localPort = 43511
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "export ROOT_DIR=$(pwd) && cd services/api && PYTHONPATH=\"${ROOT_DIR}:${PYTHONPATH}\" uvicorn app.main:app --host 0.0.0.0 --port 8000 & cd apps/frontend && npm run start"]
build = ["bash", "-c", "cd apps/frontend && npm install && npm run build"]
